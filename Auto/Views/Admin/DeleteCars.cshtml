@model  IList<Auto.ModelsApp.AppCar>
@{
    ViewBag.Title = "DeleteCars";
    Layout = "~/Views/Shared/NewAdmin.cshtml";
}

<form method="post" action="/Admin/DeleteCars">
    <button class="btn btn-danger">Удалить неактуальное</button>
</form>
<table class="table">
    <tr>
        <th>Название модели</th>
        <th>Стоимость</th>
        <th></th>
        <th>Статус</th>
    </tr>
    @if (Model != null)
    {
        foreach (var i in Model)
        {
            <tr>
                <td>
                    <a href="#">@Html.DisplayFor(modelItem => i.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Price)$
                </td>
                <td>
                    <img src="~/Files/@i.ExtencionName" width="300" height="200" alt="@i.Name">
                </td>
                <td>
                    <p>@i.Status</p>
                </td>                
            </tr>
        }
    }
</table>