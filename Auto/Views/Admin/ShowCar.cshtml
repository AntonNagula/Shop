@model Auto.ModelsApp.AppCar
@{
    Layout = "~/Views/Shared/Head.cshtml";
    ViewBag.Title = "Информация о машине";
}
<html>
<head>
    <link type="text/css" rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    <div class="present">
        <h1>@Model.Name</h1>
        <h3>Цена: @Model.Price</h3>
        <hr />        
        <form method="post" action="/Admin/DeleteCar/@Model.Id">
            <input type="submit" value="Снять с продаж" />
        </form>               
        <a class="links" href="~/Admin/ShowUsers_of_Car/@Model.Id">Показать покупателей</a>        
        <hr />
        <p><img src="~/Files/@Model.ExtencionName" width="600" height="400" alt="@Model.Name"></p>
        <p class="Info">@Model.Info</p>
    </div>
</body>
</html>