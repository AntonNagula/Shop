@model  IList<Auto.ModelsApp.AppCar>
@{
    Layout = "~/Views/Shared/NewHead.cshtml";
    ViewBag.Title = "Корзина";
}
<table class="table">
    <tr>
        <th>Название модели</th>
        <th></th>
        <th>Чат</th>
        <th>Статус</th>
        <th>Отказаться</th>
    </tr>
    @if (Model != null)
    {
        foreach (var i in Model)
        {
            <tr>
                <td>
                    <a href="#">@Html.DisplayFor(modelItem => i.Name)</a>
                    <br />
                    @Html.DisplayFor(modelItem => i.Price)$
                </td>
                <td>
                    <img src="~/Files/@i.ExtencionName" width="300" height="200" alt="@i.Name">
                </td>
                <td>

                    <form method="get" action="/Buyer/OwnerSpeach">
                        <input type="hidden" name="OwnerId" value="@i.OwnerId" />
                        <input type="hidden" name="UserId" value="@ViewBag.Id" />
                        <input type="hidden" name="CarId" value="@i.Id" />
                        <button class="btn btn-success">Чат</button>
                    </form>
                </td>
                <td>
                    <p>@i.Status</p>
                </td>
                <td>
                    <form method="post" action="/Buyer/DeletePurch/@i.Id">
                        <button class="btn btn-primary">Убрать из избранного</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>