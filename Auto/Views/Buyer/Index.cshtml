@model Auto.ModelsApp.BrandsListViewModel
@using Auto.Helpers
@{
    Layout = "~/Views/Shared/NewHead.cshtml";
    ViewBag.Title = "Для покупателей";
}

<form method="get">
    <div class="form-inline">
        <label class="control-label">Бренд: </label>
        @Html.DropDownList("brand", Model.Brands as SelectList,
                    htmlAttributes: new { @class = "form-control" })
        @*<input type="text" placeholder="Минимальная цена" name="minPrise" class="form-control" />
            <input type="text" placeholder="Максимальная цена" name="maxPrice" class="form-control" />*@
        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>
<div class="container">
    <div class="row" id="cars">
        @foreach (var item in Model.Cars)
        {
            <div class="col-md-4">
                <p><img src="~/Files/@item.ExtencionName" width="300" height="200" alt="@item.Name"></p>
                <p>
                    @Html.DisplayFor(modelItem => item.Name)
                </p>
                <p>
                    @Html.DisplayFor(modelItem => item.Price)$
                </p>
                <p>
                    <input type="hidden" name="id" id="Id" value=@item.Id />
                    <button id="btnsend" class="btn btn-primary">Избранное</button>
                </p>
                <p>
                    <form method="get" action="/Buyer/ShowCar/@item.Id">
                        <button class="btn btn-primary">Подробнее</button>
                    </form>
                </p>
            </div>
        }
    </div>
</div>
<br />
<br />
<div class="row btn-group" id="center">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { i = x }))
</div>




<script type="text/javascript">
    $(document).ready(function () {
            $("#btnsend").click(function () {
                var id = $("#Id").val();
                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    data: '{"Id":"' + id + '"}',
                    url: "@Url.Action("Buy")",
                    dataType: "json",
                    success: function (response) {
                        alert(response.value);

                    },
                    error: function (response) {
                        
                    }
                });
            });
        });
</script>